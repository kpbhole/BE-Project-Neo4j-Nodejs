<div style="margin: 2.5%;">
    
    <h3 class="display-4" style="text-align: center;">Allocation & Tracking of Public Funds using Blockchain</h3>
    <br>
    <br>
    <div class="row align-items-start">
        <div class="col" style="margin-left: 5%;">
            <p class="display-4" style="font-size:xx-large"><b>Add New Government Level</b></p>
            <form method="POST" action="/government/add">
                <!-- <input type="text" name="name" placeholder="Name">
                <button type="submit" class="btn btn-primary">Submit</button> -->
                <div class="input-group mb-3" style="width: 25rem;"> 
                    <input type="text" class="form-control" name="name" placeholder="Name">
                    <div class="input-group-append">
                      <button class="btn btn-primary" type="submit" type="button">Submit</button>
                    </div>
                </div>
            </form>
    
            <p class="display-4" style="font-size:xx-large"><b>Government's Levels Involved</b></p>
            <div class="card" style="width: 25rem;">
                <ul class="list-group list-group-flush">
                    <% governs.forEach(function(govern){ %>
                        <li class="list-group-item lead"><%= govern.name %></li>
                    <% }) %>
                </ul>
            </div>
        </div>
        <div class="col">
            <p class="display-4" style="font-size:xx-large"><b>Add New School</b></p>
            <form method="POST" action="/school/add">
                <div class="input-group mb-3" style="width: 25rem;">
                    <input type="text" class="form-control" name="name" placeholder="Name">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit" type="button">Submit</button>
                    </div>
                </div>
            </form>
    
            <p class="display-4" style="font-size:xx-large"><b>Schools Involved</b></p>
            <div class="card" style="width: 25rem;">
                <ul class="list-group list-group-flush">
                <% schools.forEach(function(school){ %>
                    <li class="list-group-item lead"><%= school.name %></li>
                <% }) %>
                </ul>
            </div>
        </div>
    </div>
    <br>
    
    
</div>










